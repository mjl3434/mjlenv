#!/bin/bash

unalias ll 2>/dev/null
alias ll='ls -l'
alias vi='vim'

export VISUAL=vim
export EDITOR="$VISUAL"

export HISTSIZE=1000
export HISTFILESIZE=2000

PATH=$PATH:~/.mjlenv/bin

SHELL_TYPE=$(basename $(echo $SHELL))
if [ $SHELL_TYPE = 'zsh' ]; then

    # Settings related to Cisco Meraki
    MERAKI=1
    if [ $MERAKI -eq 1 ]; then


        autoload bashcompinit
        bashcompinit
        export PATH=~/co/router/scripts:$PATH
        for f in ~/co/router/scripts/bash_completion.d/*; do source $f; done

        # Allegedly this fixes weird issue with git being slow to do tab completion
        __git_files () {
            _wanted files expl 'local files' _files
        }

        fixssh() {
            ssh-add -l
            eval $(tmux show-env |sed -n 's/^\(SSH_[^=]*\)=\(.*\)/export \1="\2"/p')
            ssh-add -l
        }
    fi

fi

